{
  "name": "cursorforge",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "lint": "turbo lint",
    "format": "turbo format",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "upgrade:deps": "pnpm dlx taze -r"
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@types/node": "catalog:",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "turbo": "^2.5.6",
    "typescript": "catalog:",
    "ultracite": "5.2.9"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite format"
    ]
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
