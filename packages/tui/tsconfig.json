{
  "extends": "@cursorforge/typescript-config/base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "@opentui/react",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
